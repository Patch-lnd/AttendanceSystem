<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Attendance Dashboard</title>

    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-gray-900 via-gray-800 to-black min-h-screen p-8">

<!-- ================= TITRE ================= -->
<h1 class="text-3xl font-bold text-center text-white mb-10">
    Tableau de Présence
</h1>

<!-- ================= GRILLE ================= -->
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">

    <% users.forEach(user => { %>

        <!-- ================= CARTE UTILISATEUR ================= -->
        <div class="
            relative overflow-hidden
            p-6 rounded-2xl
            text-white
            transition-all duration-300
            hover:scale-[1.03]

            backdrop-blur-sm
            border border-white/30

            <%= user.is_present 
                ? 'bg-green-500/20 shadow-lg shadow-green-500/30'
                : 'bg-red-500/20 shadow-lg shadow-red-500/30'
            %>
        ">

            <!-- ===== Reflet glass (effet lumière) ===== -->
            <div class="
                pointer-events-none
                absolute top-0 left-0 w-full h-full
                bg-gradient-to-br from-white/30 via-white/10 to-transparent
                opacity-40
            "></div>

            <!-- ================= CONTENU ================= -->
            <div class="relative z-10">

                <!-- Nom -->
                <h2 class="text-xl font-semibold tracking-wide">
                    <%= user.full_name %>
                </h2>

                <!-- UID -->
                <p class="text-sm mt-2 opacity-90">
                    UID : <%= user.rfid_uid %>
                </p>

                <!-- Statut -->
                <p class="mt-6 text-lg font-bold tracking-widest">
                    <%= user.is_present ? 'PRÉSENT' : 'ABSENT' %>
                </p>

            </div>

        </div>

    <% }); %>

</div>

</body>
</html>
